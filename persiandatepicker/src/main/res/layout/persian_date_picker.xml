<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/persian_date_picker_background"
    android:layoutDirection="ltr">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/persianDatePickerHeight"
        android:alpha="0.5"
        android:background="@drawable/persian_date_picker_box_background"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toEndOf="@id/wp_year"
        app:layout_constraintStart_toStartOf="@id/wp_year"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/persianDatePickerHeight"
        android:alpha="0.5"
        android:background="@drawable/persian_date_picker_box_background"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toEndOf="@id/wp_day"
        app:layout_constraintStart_toStartOf="@id/wp_day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/persianDatePickerHeight"
        android:alpha="0.5"
        android:background="@drawable/persian_date_picker_box_background"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toEndOf="@id/wp_month"
        app:layout_constraintStart_toStartOf="@id/wp_month"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <bpc.dis.persiandatepicker.Utils.WheelPicker.WheelPicker
        android:id="@+id/wp_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/wp_month"
        app:layout_constraintTop_toTopOf="parent"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_data="@array/persianDatePickerMonth"
        app:wheel_font_path="@string/persianDatePickerItemFontPath"
        app:wheel_item_align="center"
        app:wheel_item_space="@dimen/persianDatePickerItemSpace"
        app:wheel_item_text_color="@color/persianDatePickerItemTextColor"
        app:wheel_item_text_size="@dimen/persianDatePickerItemTextSize"
        app:wheel_selected_item_text_color="@color/persianDatePickerSelectedItemTextColor" />

    <bpc.dis.persiandatepicker.Utils.WheelPicker.WheelPicker
        android:id="@+id/wp_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_data="@array/persianDatePickerMonth"
        app:wheel_font_path="@string/persianDatePickerItemFontPath"
        app:wheel_item_align="center"
        app:wheel_item_space="@dimen/persianDatePickerItemSpace"
        app:wheel_item_text_color="@color/persianDatePickerItemTextColor"
        app:wheel_item_text_size="@dimen/persianDatePickerItemTextSize"
        app:wheel_selected_item_text_color="@color/persianDatePickerSelectedItemTextColor" />

    <bpc.dis.persiandatepicker.Utils.WheelPicker.WheelPicker
        android:id="@+id/wp_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_jump_today"
        app:layout_constraintEnd_toStartOf="@id/wp_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_data="@array/persianDatePickerMonth"
        app:wheel_font_path="@string/persianDatePickerItemFontPath"
        app:wheel_item_align="center"
        app:wheel_item_space="@dimen/persianDatePickerItemSpace"
        app:wheel_item_text_color="@color/persianDatePickerItemTextColor"
        app:wheel_item_text_size="@dimen/persianDatePickerItemTextSize"
        app:wheel_selected_item_text_color="@color/persianDatePickerSelectedItemTextColor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_jump_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/persianDatePickerJumpTodayPadding"
        android:text="@string/persianDatePickerJumpToday"
        android:textColor="@color/persianDatePickerJumpTodayTextColor"
        android:textSize="@dimen/persianDatePickerJumpTodayTextSize"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/persianDatePickerButtonBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/persianDatePickerButtonPadding"
        android:text="@string/persianDatePickerSubmit"
        android:textColor="@color/persianDatePickerButtonTextColor"
        android:textSize="@dimen/persianDatePickerButtonTextSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

